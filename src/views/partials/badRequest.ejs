<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 error-container">
      <h1 class="error-heading">Erro 400</h1>
      <p class="error-message">
        Oops! Parece que os dados fornecidos são inválidos.
      </p>
      <!-- Seção para mensagens de sucesso -->
      <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success"><%= success_msg %></div>
      <% } %>

      <!-- Seção para mensagens de erro -->
      <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
      <p><%=bodyErrors %></p>
      <button onclick="goBack()" class="btn btn-danger btn-back">Voltar</button>
    </div>
  </div>
</div>

<script>
  function goBack() {
    window.history.back();
  }
</script>
